%!PS-Adobe-3.0 EPSF-3.0
%%BoundingBox: 27 27 114 114
%%Creator: Boyko B. Bantchev
%%Title: glider.eps
%%CreationDate: 26 March 2004
                                                                                
% The cell width/height (a) is an `absolute' parameter,
% in centimetres.  The line width (w) of the grid and
% the dot radius (r) are ratios to the cell size
                                                                                
save
                                                                                
/a 1 def             % cell size
/w .03 a mul def     % line width of the grid
/r .37 a mul def     % dot radius
%-------------------------------------------------
                                                                                
72 2.54 div dup scale  % set unit = 1cm
1 1 translate          % move some distance inwards
0 setgray              % set drawing in black
                                                                                
a dup scale
                                                                                
w setlinewidth  1 setlinecap
2 {4 {0 0 moveto  3 0 lineto  0 1 translate} repeat
   0 -1 translate  -90 rotate} repeat
stroke
                                                                                
.5 dup translate
0 setlinewidth
[[1 0] [0 1] [0 2] [1 2] [2 2]]
{aload pop r 0 360 arc closepath fill} forall
                                                                                
restore
                                                                                
%%EOF
